
<html>

<body>

    <table>

      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
      </tr>   

      <% allProducts.forEach( (product) => { %>

        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
        </tr>      
  
      <% }) %>

    </table>

</body>

</html>